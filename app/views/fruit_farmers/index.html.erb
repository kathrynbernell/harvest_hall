<div class="page-header">
  <h1>
    Fruit farmers
    <a href="/fruit_farmers/new" class="btn btn-lg btn-success">New Fruit farmer</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Fruit</th>
        <th>Farmer</th>
        <th>Actions</th>
      </tr>

      <% @fruit_farmers.each do |fruit_farmer| %>
      <tr>
        <td><%= fruit_farmer.fruit.name %></td>
        <td><%= fruit_farmer.farmer.name %></td>
        <td>
          <a href="/fruit_farmers/<%= fruit_farmer.id %>" class="btn btn-primary">Show</a>
          <a href="/fruit_farmers/<%= fruit_farmer.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_fruit_farmer/<%= fruit_farmer.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
