<div class="page-header">
  <h1>
    Fruits
    <a href="/fruits/new" class="btn btn-lg btn-success">New Fruit</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Harvest start date</th>
        <th>Harvest end date</th>
        <th>Actions</th>
      </tr>

      <% @fruits.each do |fruit| %>
      <tr>
        <td><%= fruit.name %></td>
        <td><%= fruit.harvest_start_date %></td>
        <td><%= fruit.harvest_end_date %></td>
        <td>
          <a href="/fruits/<%= fruit.id %>" class="btn btn-primary">Show</a>
          <a href="/fruits/<%= fruit.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_fruit/<%= fruit.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
