<div class="page-header">
  <h3>Fruit #<%= @fruit.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @fruit.name %></dd>

      <dt>Harvest start date</dt>
      <dd><%= @fruit.harvest_start_date %></dd>

      <dt>Harvest end date</dt>
      <dd><%= @fruit.harvest_end_date %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/fruits" class="btn btn-primary">
        Back
      </a>
      <a href="/fruits/<%= @fruit.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_fruit/<%= @fruit.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
