<div class="page-header">
  <h3>Fruit #<%= @fruit.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @fruit.name %></dd>

      <dt>Harvest start date</dt>
      <dd><%= @fruit.harvest_start_date %></dd>

      <dt>Harvest end date</dt>
      <dd><%= @fruit.harvest_end_date %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/fruits" class="btn btn-primary">
        Back
      </a>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Location</th>
        <th>Image</th>
        <th>Actions</th>
      </tr>



      <% @fruit.farmers.each do |farmer| %>
      <tr>
        <td><%= farmer.name %></td>
        <td><%= farmer.location %></td>
        <td><img src="<%=farmer.image%>" alt="farmer image" height="42" width="42"></td>
        <td>
          <a href="/farmers/<%= farmer.id %>" class="btn btn-primary">Show</a>
          <a href="/farmers/<%= farmer.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_farmer/<%= farmer.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
  </div>
